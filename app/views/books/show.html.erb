
<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book_new %>
	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>

					<% if @book.favorited_by?(current_user) %>
						 <td>
						 	<%= link_to book_favorites_path(@book), method: :delete do %>
						 	  <i class="fas fa-heart like-btn" aria-hidden="true" style="color: red;"></i>
						 	  <%= @book.favorites.count %>
						 	<% end %>
						 </td>
				 <% else %>
				     <td>
				 	    <%= link_to book_favorites_path(@book), method: :post do %>
				 	      <i class="fa fa-heart-o" aria-hidden="true"></i>
				 	      <%= @book.favorites.count %>
				 	    <% end %>
						</td>
				<% end %>
				<td><%= @book.book_comments.count %>件コメント</td>

				<% if @book.user == current_user %>
						<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				<% end %>
				</tr>
			</table>
<!-- コメント投稿 -->
			<div>
			<%= form_for [@book, @book_comment] do |f| %>
			<!-- エラー文 -->
			<% if @book_comment.errors.any? %>
			 <div id="error_explanation">
			   <h2><%= pluralize(@book_comment.errors.count, "error") %> prohibited this book from being saved:</h2>

			   <ul>
			   <% @book_comment.errors.full_messages.each do |message| %>
			     <li><%= message %></li>
			   <% end %>
			   </ul>
			 </div>
			 <% end %>

		    <div class="row">
	        <div class="col-sm-10">
	            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
	        </div>
		    </div>
		    <%= f.submit "送信する", class: "btn btn-primary  pull-right" %>
			<% end %>
		</div>
<!-- コメント表示 -->
		<div>
			<table class="table">
				<thead>
					<tr>
						<th>name</th>
						<th>comment</th>
						<th></th>
					</tr>
				</thead>
		 <% @book.book_comments.each do |book_comment| %>
			<tr>
				<td><%= book_comment.user.name%></td>
				<td><%= book_comment.comment%></td>
				<td><%=link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), class: "btn btn-danger", method: :delete,"data-confirm" => "Are you sure?" %></td>
		 <% end%>
		</table>
		</div>

	</div>

</div>
