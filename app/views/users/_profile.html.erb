<table class="table">
		<tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
			<th>follows</th>
			<th>
				<%= link_to follows_user_path(user) do %>
				<%= user.active_relationships.count %>
				<% end %>
			</th>
		</tr>
		<tr>
			<th>followers</th>
			<th>
				<%= link_to followers_user_path(user) do %>
				<%= user.passive_relationships.count %>
				<% end %>
			</th>
		</tr>
		<tr>
		<% if current_user != user %>
		    <% if user.followed_by?(current_user) %>
		        <th><%=link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-danger", method: :delete %></th>
		    <% else %>
		        <th><%=link_to "フォローする", user_relationships_path(user.id), class: "btn btn-primary", method: :post %></th>
		    <% end %>
		<% end %>
	</tr>
</table>

<div class="row">
	<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>
